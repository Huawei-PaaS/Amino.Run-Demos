<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:gravity="center"
    tools:context="sapphire.appexamples.hankstodo.glue.CreateToDo" >

    <EditText
        android:id="@+id/todo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCreateList"
        android:layout_toLeftOf="@+id/btnCreateList"
        android:layout_toStartOf="@+id/btnCreateList"
        android:layout_alignBottom="@+id/btnCreateList"
        android:layout_alignParentStart="true"
        android:hint="Enter ToDo List Name" />

    <Button
        android:id="@+id/btnCreateList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onAddList"
        android:text="Create ToDo" />
</RelativeLayout>